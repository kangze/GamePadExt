<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="GpeDropDownMixin.lua"/>
    <Frame name="GpeDropDownTemplate" virtual="true" frameStrata="HIGH" enableMouse="true" inherits="BackdropTemplate" mixin="GpeDropDownMixin">
        <Size x="210" y="45"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background">
                    <Color r="0.27450980392157" g="0.27058823529412" b="0.27843137254902" a="1"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <!--选中的项名称-->
                <FontString parentKey="text" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="CENTER" justifyV="CENTER">
                    <FontHeight val="10"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!--选择项的容器-->
        <Frames>
            <Frame parentKey="container" frameStrata="HIGH" enableMouse="true">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="background">
                            <Color r="0.27450980392157" g="0.27058823529412" b="0.27843137254902" a="1"/>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>
    </Frame>
</Ui>