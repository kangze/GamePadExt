<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="GpeButtonTemplateMixin.lua"/>
    <Frame name="GpeButtonTemplate" hidden="true" enableMouse="true" virtual="true" mixin="GpeButtonTemplateMixin">
        <KeyValues>
            <KeyValue key="buttonText" value=""/>
            <KeyValue key="shadow" value=""/>
            <KeyValue key="colorr" value=""/>
            <KeyValue key="colorg" value=""/>
            <KeyValue key="colorb" value=""/>
            <KeyValue key="colora" value=""/>
        </KeyValues>
        <Size x="130" y="30"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background" setAllPoints="true">
                    <Color r="0.490" g="0.345" b="0.525" a="1"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <FontString parentKey="text" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="18"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad  method="OnLoad_Intrinsic"  intrinsicOrder="postcall"/>
            <OnEnter method="OnEnter_Intrinsic" intrinsicOrder="postcall"/>
            <OnLeave method="OnLeave_Intrinsic" intrinsicOrder="postcall"/>
        </Scripts>
    </Frame>
</Ui>