<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="HeaderMixin.lua"/>
    <Frame frameStrata="DIALOG" enableMouse="true" mixin="HeaderMixin">
        <Anchors>
            <Anchor point="TOP" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background1">
                    <Color r="0.27450980392157" g="0.27058823529412" b="0.27843137254902" a="1"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="coin" atlas="lootroll-rollicon-yourolled-greed">
                    <Size x="40" y="40"/>
                    <Anchors>
                        <Anchor point="RIGHT" x="-270"/>
                    </Anchors>
                </Texture>

                <FontString parentKey="text" text="5,000" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="14"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.coin" relativePoint="LEFT" x="10" y="-2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>

            <Frame>
                <Size x="100" y="30"/>
                <Anchors>
                    <Anchor point="LEFT" x="330"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="background2" setAllPoints="true">
                            <Color r="0.96078431372549" g="0.50980392156863" b="0.12549019607843" a="1"/>
                        </Texture>

                        <FontString parentKey="text" text="购买" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                            <FontHeight val="14"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame>
                <Size x="100" y="30"/>
                <Anchors>
                    <Anchor point="LEFT" x="430"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="background2" setAllPoints="true">
                            <Color r="0.14509803921569" g="0.52156862745098" b="0.65098039215686" a="1"/>
                        </Texture>

                        <FontString parentKey="text" text="已售出" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                            <FontHeight val="14"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEnter method="OnEnter"/>
        </Scripts>
    </Frame>

</Ui>