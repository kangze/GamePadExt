<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="HeaderMixin.lua"/>
    <Frame hidden="true" frameStrata="DIALOG" enableMouse="true" mixin="HeaderMixin">
        <Anchors>
            <Anchor point="TOP" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background1" atlas="auctionhouse-background-auctions">
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <Texture parentKey="coin" atlas="lootroll-rollicon-yourolled-greed">
                    <Size x="40" y="40"/>
                    <Anchors>
                        <Anchor point="RIGHT" x="-300"/>
                    </Anchors>
                </Texture>

                <FontString parentKey="text" text="5,000" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="14"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent.coin" relativePoint="LEFT" x="10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>


        <Scripts>
            <OnLoad>
            local width=UIParent:GetWidth();
            self:SetSize(1920,30);
            </OnLoad>
        </Scripts>
    </Frame>

</Ui>