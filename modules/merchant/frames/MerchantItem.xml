<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="MerchantItemMixin.lua"/>
    <Frame name="MerchantItemTemplate1" hidden="false" virtual="true" frameStrata="FULLSCREEN" enableMouse="true" inherits="BackdropTemplate" mixin="MerchantItemMixin">
        <Size x="350" y="75"/>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="background">
                    <Color r="0.27450980392157" g="0.27058823529412" b="0.27843137254902" a="1"/>
                </Texture>
            </Layer>

            <!--图标层-->
            <Layer level="ARTWORK">
                <Texture parentKey="icon" file="Interface\Icons\ClassIcon_Mage">
                    <!-- <Color r="0.96078431372549" g="0.50980392156863" b="0.12549019607843" a="1"/> -->
                    <Size x="52" y="52"/>
                    <Anchors>
                        <Anchor point="LEFT" x="10"/>
                    </Anchors>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <!--价格花费-->
                <FontString parentKey="costmoney" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="17"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-110" y="3"/>
                    </Anchors>
                </FontString>

                <!--商品名称-->
                <FontString parentKey="productName" text="咸湿的鲨鱼饵的咸饼干" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="19"/>
                    <Anchors>
                        <Anchor point="LEFT" x="70" y="12"/>
                    </Anchors>
                </FontString>

                <!--购买要求-->
                <FontString parentKey="forbidden" text="" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                    <FontHeight val="9"/>
                    <Color r="1" g="0" b="0"/>
                    <Anchors>
                        <Anchor point="LEFT" x="70" y="-5"/>
                    </Anchors>
                </FontString>

            </Layer>

            <Layer level="ARTWORK">

            </Layer>

            <!--图标的边框-->
            <Layer level="OVERLAY">
                <Texture parentKey="iconBorder" atlas="loottoast-itemborder-orange">
                    <Size x="60" y="60"/>
                    <Anchors>
                        <Anchor point="LEFT" x="5" y=""/>
                    </Anchors>
                    <!-- <TexCoords left="0.0" right="0.6" top="0.0" bottom="0.6"/> -->
                </Texture>
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="buyFrame">
                <Size x="100" y="35"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <!--PS X 图标的背景-->
                        <Texture  parentKey="psx_background" file="Interface\AddOns\GamePadExt\media\texture\BuyButtonMask" setAllPoints="true">
                            <TexCoords left="0.1" right="0.9" top="0" bottom="1"/>
                        </Texture>

                        <!--PS图标-->
                        <Texture parentKey="psx" file="Interface\AddOns\GamePadExt\media\gamepad\ps_r_cross">
                            <Size x="30" y="30"/>
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" x="-4" y="2"/>
                            </Anchors>
                        </Texture>

                        <!--购买文字-->
                        <FontString parentKey="text" text="购买" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                            <FontHeight val="18"/>
                            <Anchors>
                                <Anchor point="CENTER" x="-15"/>
                            </Anchors>
                        </FontString>

                    </Layer>
                </Layers>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <!-- <OnEnter method="OnEnter"/>
            <OnLeave method="OnLeave"/> -->
            <OnGamePadButtonDown method="OnGamePadButtonDown"/>
        </Scripts>
    </Frame>

</Ui>