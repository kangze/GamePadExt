<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="GpeMountItemTemplateMixin.lua"/>
    <Frame name="GpeMountItemTemplate" virtual="true" frameStrata="HIGH" enableMouse="true" mixin="GpeMountItemTemplateMixin">
        <Size x="220" y="35"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture atlas="lootroll-itementry-background" setAllPoints="true"/>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="icon" atlas="classicon-mage">
                    <Size x="20" y="20"/>
                    <Anchors>
                        <Anchor point="LEFT" x="10"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="iconBorder" atlas="UI-Achievement-IconFrame">
                    <Size x="30" y="30"/>
                    <Anchors>
                        <Anchor point="LEFT" x="5"/>
                    </Anchors>
                </Texture>
                <Texture atlas="activities-ribbon">
                    <Size x="25" y="25"/>
                    <Anchors>
                        <Anchor point="TOP" y="-5"/>
                        <Anchor point="RIGHT" x="-15"/>
                    </Anchors>
                </Texture>
                <Texture atlas="activities-icon-checkmark">
                    <Size x="12" y="12"/>
                    <Anchors>
                        <Anchor point="TOP" y="-8"/>
                        <Anchor point="RIGHT" x="-20"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="highlight" hidden="true" atlas="GarrMission_FollowerListButton-Select" setAllPoints="true">
                </Texture>
                <FontString parentKey="title1" text="奥妮克希亚" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormal" justifyH="CENTER" justifyV="TOP">
                    <FontHeight val="12"/>
                    <Anchors>
                        <Anchor point="TOP" y="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEnter method="OnEnter"/>
            <OnLeave method="OnLeave"/>
        </Scripts>
    </Frame>
</Ui>