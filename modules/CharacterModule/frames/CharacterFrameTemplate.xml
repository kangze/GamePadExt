<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="CharacterFrameTemplateMixin.lua"/>
    <Frame name="CharacterFrameTemplate" virtual="true" frameStrata="HIGH" enableMouse="true" mixin="CharacterFrameTemplateMixin">
        <Size x="500" y="400"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>
            <Frame parentKey="HeadSlot" inherits="GpeEquipmentTemplate">
                <KeyValues>
                    <!--用于指示列数-->
                    <KeyValue key="col" value="1"/>
                </KeyValues>
                <Anchors>
                    <Anchor point="LEFT"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <!--装备图标-->
                        <Texture parentKey="icon">
                            <Size x="40" y="40"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>

                        <!--物品名称-->
                        <FontString parentKey="name" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP">
                            <Size x="200" y="45"/>
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT" x="5"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>