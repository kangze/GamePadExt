<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="CharacterFrameTemplateMixin.lua"/>
    <Frame name="CharacterFrameTemplate" virtual="true" frameStrata="HIGH" enableMouse="true" mixin="CharacterFrameTemplateMixin">
        <Anchors>
            <Anchor point="TOPLEFT"/>
        </Anchors>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnSizeChanged method="OnSizeChanged"/>
        </Scripts>

        <Frames>
            <!--装备框体-->
            <Frame parentKey="equipment" frameStrata="HIGH" enableMouse="true">
                <Anchors>
                    <Anchor point="LEFT"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background" atlas="transmog-background-race-vulpera">
                        </Texture>

                        <Texture parentKey="background_1" atlas="GarrMissionLocation-Maw-ButtonBG">
                            <Anchors>
                                <Anchor point="LEFT" x="-194" y="50"/>
                            </Anchors>
                        </Texture>
                    </Layer>

                </Layers>
            </Frame>

            <!--属性框体-->
            <Frame parentKey="property" frameStrata="HIGH" enableMouse="true">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.equipment" relativePoint="RIGHT"/>
                </Anchors>
                <Layers>
                    <!--属性1-->
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background1" atlas="UI-Character-Info-Mage-BG">
                            <Anchors>
                                <Anchor point="TOP"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="background2" atlas="UI-Character-Info-Mage-BG">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.background1" relativePoint="BOTTOMLEFT"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="background1_title" atlas="UI-Character-Info-Title">
                            <Anchors>
                                <Anchor point="TOP" y="-100"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="background2_title" atlas="UI-Character-Info-Title">
                            <Anchors>
                                <Anchor point="TOP" relativeKey="$parent.background2" y="-15"/>
                            </Anchors>
                        </Texture>

                        <Texture parentKey="background0_title" atlas="UI-Character-Info-Title">
                            <Anchors>
                                <Anchor point="TOP" y="-25"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK">
                        <FontString parentKey="title0" text="装备等级" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormal" justifyH="CENTER" justifyV="TOP">
                            <FontHeight val="12"/>
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.background0_title" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                        <FontString parentKey="title1" text="基础属性" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormal" justifyH="CENTER" justifyV="TOP">
                            <FontHeight val="12"/>
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.background1_title" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>

                        <FontString parentKey="title2" text="强化属性" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormal" justifyH="CENTER" justifyV="TOP">
                            <FontHeight val="12"/>
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.background2_title" relativePoint="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>


        </Frames>
    </Frame>
</Ui>