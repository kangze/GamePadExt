<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
    <Script file="HeaderFrameMixin.lua"/>
    <Frame name="HeaderFrameTemplate" virtual="true" frameStrata="DIALOG" enableMouse="true" mixin="HeaderFrameMixin">
        <Anchors>
            <Anchor point="TOP" />
        </Anchors>
        <Layers>

            <Layer level="BACKGROUND">
                <!--头部背景-->
                <Texture parentKey="background">
                    <Color r="0.27450980392157" g="0.27058823529412" b="0.27843137254902" a="1"/>
                </Texture>
            </Layer>
        </Layers>

        <Frames>

            <Frame parentKey="buyFrame" inherits="GpeButtonTemplate">
                <KeyValues>
                    <KeyValue key="buttonText" value="购买"/>
                </KeyValues>
                <Size x="130" y="30"/>
                <Anchors>
                    <Anchor point="LEFT" x="40"/>
                </Anchors>
            </Frame>

            <Frame parentKey="rebuyFrame" inherits="GpeButtonTemplate">
                <KeyValues>
                    <KeyValue key="buttonText" value="卖出"/>
                </KeyValues>
                <Size x="130" y="30"/>
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.buyFrame" relativePoint="RIGHT"/>
                </Anchors>
            </Frame>

            <Frame parentKey="money">
                <Size x="100" y="35"/>
                <Anchors>
                    <Anchor point="RIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background">
                            <Color r="0.165" g="0.361" b="0.792" a="1"/>
                        </Texture>
                    </Layer>
                    <Layer level="ARTWORK">
                        <Texture parentKey="coin" atlas="lootroll-rollicon-yourolled-greed">
                            <Size x="40" y="35"/>
                            <Anchors>
                                <Anchor point="RIGHT" x=""/>
                            </Anchors>
                        </Texture>

                        <FontString parentKey="money" text="5,000" font="Fonts/FRIZQT__.TTF" outline="THICKOUTLINE" inherits="GameFontNormalLeft" justifyH="LEFT" justifyV="TOP">
                            <FontHeight val="18"/>
                            <Anchors>
                                <Anchor point="RIGHT" relativeKey="$parent.coin" relativePoint="LEFT" x="10" y="-2"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEnter method="OnEnter"/>
        </Scripts>
    </Frame>

</Ui>